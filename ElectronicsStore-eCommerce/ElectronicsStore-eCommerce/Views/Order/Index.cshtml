@model List<Order>

<div class="container mt-5">
    <h2>Your Orders</h2>

    @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Order Date</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm:ss")</td>
                        <td>@order.TotalAmount</td>
                        <td>@order.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-orderId="@order.OrderId">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders available.</p>
    }
</div>
