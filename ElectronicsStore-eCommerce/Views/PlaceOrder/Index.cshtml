@using ElectronicsStore_eCommerce.Models.ViewModel;
<!-- PlaceOrder.cshtml -->
@model PlaceOrderViewModel

@{
    ViewData["Title"] = "Place Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section style="background-color: #eee;">
    <h1 class="text-center mb-4">Place Your Order</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["ValidationErrors"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ValidationErrors"]
        </div>
    }

    <form method="post" asp-action="Create" asp-controller="Order">
        <div class="container py-5">
            <div class="row d-flex justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="card rounded-3">
                        <div class="card-body mx-1 my-2">
                            <div class="d-flex justify-content-between align-items-center pb-1">
                                <a href="#!" class="text-muted">Shipping Address</a>
                                <a href="@Url.Action("Create", "ShippingInfo", new { returnUrl = "/PlaceOrder/Index" })" type="button" class="btn btn-primary btn-lg">Add Shipping</a>
                            </div>
                            <div class="pt-3">
                                @foreach (var shippingInfo in Model.AvailableShippingInfos)
                                {
                                    <div class="d-flex flex-row pb-3">
                                        <div class="rounded border border-2 d-flex w-100 p-3 align-items-center"
                                             style="background-color: rgba(18, 101, 241, 0.07);">
                                            <div class="d-flex align-items-center pe-3">
                                                <input class="form-check-input" type="radio" id="shippingInfoId"
                                                       aria-label="..." name="shippingInfoId" value="@shippingInfo.ShippingInfoId" />
                                            </div>
                                            <div class="d-flex flex-column">
                                                <p class="mb-1 small text-primary">@shippingInfo.ShippingAddress</p>
                                                <p class="mb-1 small text-primary">@shippingInfo.City</p>
                                                <h6 class="mb-0 text-primary">@shippingInfo.ZipCode</h6>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-outline">
                                    <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                           placeholder="1234 5678 9012 3457" minlength="19" maxlength="19" />
                                    <label class="form-label" for="typeText">Card Number</label>
                                </div>
                                <img src="https://img.icons8.com/color/48/000000/visa.png" alt="visa" width="64px" />
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-outline">
                                    <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                           placeholder="Cardholder's Name" />
                                    <label class="form-label" for="typeName">Cardholder's Name</label>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center pb-2">
                                <div class="form-outline">
                                    <input type="text" id="typeExp" class="form-control form-control-lg" placeholder="MM/YYYY"
                                           size="7" id="exp" minlength="7" maxlength="7" />
                                    <label class="form-label" for="typeExp">Expiration</label>
                                </div>
                                <div class="form-outline">
                                    <input type="password" id="typeText2" class="form-control form-control-lg"
                                           placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" />
                                    <label class="form-label" for="typeText2">Cvv</label>
                                </div>
                                <button type="submit" class="btn btn-info btn-lg btn-rounded">
                                    <i class="fas fa-arrow-right"></i>Place Order
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>
